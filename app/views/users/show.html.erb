<h1>Hello User <%= current_user.id %></h1>
<h2>Your Projects :</h2>
<% @count = 1 %>
<table>
<% @projectlist.each do |p| %>
    <tr>
      <td>(<%= @count %>) </td>
      <td><%= link_to project_path(p.id) do %>
        <%= p.title %>
        <% end %>
      </td>
    </tr>
    <% @count+= 1 %>
  <% end %>
</table>

<% @count = 1 %>
<h2>Your Tasks :</h2>
<table>
  <tr>
    <th>  </th>
    <th>Task</th>
    <th>Project</th>
    <th>Sprint</th>
    <th>Status</th>
    <th colspan="2"></th>
  </tr>
<% @tasklist.each do |t| %>
    <tr>
      <td>(<%= @count %>) </td>
      <td><%= t.text %></td>
      <td><%= link_to project_path(t.project_id) do %>
        <%= Project.find(t.project_id).title %>
        <% end %>
      </td>
      <td><%= t.sprints %></td>
      <% if t.status = 0 %>
      <td>Not Started</td>
      <% elsif t.status = 1 %>
      <td>Going On</td>
      <% else %>
      <td>Completed</td>
      <% end %>
    </tr>
    <% @count+= 1 %>
  <% end %>
</table>

<%= link_to "Create A new Project", new_project_path %>
