<h1>Hello User-2</h1>
<h2>Your Projects :</h2>
<% @count = 1 %>
<table>
  <tr>
    <th>  </th>
    <th>Title</th>
    <th>Details</th>
  </tr>
<% @projectlist.each do |p| %>
    <tr>
      <td>(<%= @count %>) </td>
      <td><%= p.title %></td>
      <td><%= p.text %></td>
    </tr>
    <% @count+= 1 %>
  <% end %>
</table>

<% @count = 1 %>
<h2>Your Tasks :</h2>
<table>
  <tr>
    <th>  </th>
    <th>Task</th>
    <th>Project</th>
    <th>Sprint</th>
    <th>Status</th>
  </tr>
<% @tasklist.each do |t| %>
    <tr>
      <td>(<%= @count %>) </td>
      <td><%= t.text %></td>
      <% temp = Project.find(t.project_id) %>
      <td><%= temp.title %></td>
      <td><%= t.sprints %></td>
      <% if t.status = 0 %>
      <td>Not Started</td>
      <% elsif t.status = 1 %>
      <td>Going On</td>
      <% else %>
      <td>Completed</td>
      <% end %>
    </tr>
    <% @count+= 1 %>
  <% end %>
</table>