<p>
<strong>Title:</strong>
  <%= @project.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @project.text %>
</p>

<h2>List of Tasks</h2>
<% @project.tasks.each do |task| %>
  <p>
    <%= task.text %>
  </p>
<% end %>

<h2>Add a Task:</h2>
<%= form_for([@project, @project.tasks.build]) do |f| %>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>