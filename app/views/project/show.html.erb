  <p>
<strong>Title:</strong>
  <%= @project.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @project.text %>
</p>

<h2>List of Tasks</h2>
<table>
    <tr>
        <td><u>Task id</u></td>
        <td><u>Developer</u></td>
        <td><u>Task</u></td>
    </tr>
  <% @project.tasks.each do |task| %>
    <tr>
      <td><%= task.id %></td>
      <td><%= task.text %></td>
    </tr>
  <% end %>
</table>

<h2>Add a Task:</h2>
<%= form_for([@project, @project.tasks.build]) do |f| %>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
  <%= collection_select(:user, :name, @user, :id, :name, {:prompt => true}) %>
  <%= select_tag "sprints", options_for_select(@options) %>
  <%= f.submit %>
  </p>
<% end %>

  <h3>Current Sprint <%= @project.current_sprint %> </h3>
  <table>
  	<% @tasks.each do |current_task| %>
  		<tr>
  		  <td><%= current_task.id %></td>
  		  <td><%= current_task.text %></td>
  		  <td>
          <%= form_for current_task, url: project_task_path(project_id: @project.id, id: current_task.id), method: :put do |f| %>
            
            <%= f.radio_button :status, 0, :checked => (current_task.status == 0) %> 
            <%= label :status, "N" %> 
            <%= f.radio_button :status, 1, :checked => (current_task.status == 1) %>            
            <%= f.label :status, "P"  %>
            <%= f.radio_button :status, 2, :checked => (current_task.status == 2) %>
            <%= f.label :status, "F"  %>
            
            <%= f.submit %>
          <% end %>
        </td>
  		  <td><%= current_task.sprints %></td>
  		  <td><%= current_task.user_id %></td>
        <td>
        </td>
  		</tr>
  	<% end %>
  </table>

<%= form_for @project, :url => {:controller => "project", :action => "next_sprint"} do |f| %>
	<%= f.submit "move to next sprint!"%>
<% end %>


