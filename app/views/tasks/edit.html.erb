<h1>Editing Task</h1>
 
<%= form_for :task, url: task_path(@task), method: :patch do |f| %>
 
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> prohibited
        this task from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <h2>
  	Task id: @task.id
  </h2>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  
  <p>Status Select
 	<%= select_tag "status", options_for_select(@options) %>
 	</p>

 	<p>Select Developer
 	<%= collection_select(:task, :name, @user, :id, :name, {:prompt => true}) %>
 </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', tasks_path %>
