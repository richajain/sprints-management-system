<table>
  <tr>
    <th>User</th>
    <th>Task</th>
    <th colspan="2"></th>
  </tr>

  <% @tasks.each do |t| %>
    <tr>
      <td><%= t.user.name %></td>
      <td><%= t.text %></td>
      <td><%= link_to 'Show', task_path(t) %></td>
      <td><%= link_to 'Edit', edit_task_path(t) %></td>
    </tr>
  <% end %>
</table>
